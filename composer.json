{
    "name": "medicalmundi/brotea",
    "description": "A library for OpenEMR modules",
    "type": "library",
    "keywords": ["openemr", "openemr-module"],
    "require": {
        "php": "^8.1",
        "psr/container": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": false,
            "target-directory": "tools"
        }
    },
    "autoload": {
        "psr-4": {
            "Brotea\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotea\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0 || ^9.5",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Zerai Teclai",
            "email": "teclaizerai@gmail.com"
        }
    ]
}
